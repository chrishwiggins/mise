#!/bin/bash
# List repositories I've pushed to recently - using repo list API

echo "Recent GitHub repositories:"
echo

# Get repositories sorted by push date
gh repo list chrishwiggins --limit 20 --json name,pushedAt |
  jq -r 'sort_by(.pushedAt) | reverse | .[] | "\(.name) (\(.pushedAt | fromdateiso8601 | strftime("%b %d")))"'